<div class="row">
  <div class="col-md-3">
    <%= form_with scope: :weather, url: city_weather_index_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :city %>
        <%= form.text_field :city, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :country %>
        <%= form.text_field :country, class: "form-control" %>
      </div>
      <%= form.button "Get Weather", class: "btn btn-primary btn-sm" %>
      <%= link_to 'Get a random location', random_weather_index_path, class: "btn btn-info btn-sm" %>
    <% end %>
  </div>
</div>
