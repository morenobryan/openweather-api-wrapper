<h2>Enter the city and the country of which you want the current weather</h2>

<div class="row">
  <div class="col-md-3">
    <%= form_with scope: :weather, url: city_weather_index_path, class: 'weather-search', local: true do |form| %>
      <div class="form-group">
        <%= form.label :city %>
        <%= form.text_field :city, class: "form-control", id: "weather_city" %>
      </div>
      <div class="form-group">
        <%= form.label :country, "Country" %>
        <%= render 'common/country_select', form: form %>
      </div>
      <%= form.button "Get Weather", class: "btn btn-primary btn-sm" %>
      <%= link_to 'Get a random location', random_weather_index_path, class: "btn btn-info btn-sm" %>
    <% end %>
  </div>
</div>
